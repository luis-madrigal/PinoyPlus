<!DOCTYPE html>
<html>

<head>
    <title>PinoyPlus</title>

    <!-- Font Awesome. Used for icons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <!-- Strophe XMPP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/strophe.js/1.2.15/strophe.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/strophejs-plugins@0.0.7/muc/strophe.muc.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/strophejs-plugins@0.0.7/roster/strophe.roster.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/strophejs-plugins@0.0.7/rsm/strophe.rsm.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/strophejs-plugins@0.0.6/mam/strophe.mam.v0.3.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/strophejs-plugins@0.0.7/archive/strophe.archive.js"></script>


    <!-- Vue.js development version, includes helpful console warnings -->
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

    <!-- <script src=""></script> -->
    <!-- Chart.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js"></script>

    <!--W3 CSS-->
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="css/chatbox.css">
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/navbar.css">
    <link rel="stylesheet" href="css/footer.css">
    <link rel="stylesheet" href="css/announcements.css">
    <link rel="stylesheet" href="css/announcements-thread.css">
</head>

<body>

    <% include partials/chat %>

        <% include partials/navbar %>

            <div class="container container-with-spacing">
                <div class="row">
                    <div class="col-lg-9">
                        <div class="breadcrumbs red-rect-bg">
                            <div class="row">
                                <div class="col-lg-12">
                                    <p>Home > Main Forum > Official Announcements</p>
                                </div>
                            </div>
                        </div>
                        <!-- threads -->
                        <div class="thread-list">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="row">
                            <div class="col-lg-12">
                                <!-- search in forum -->
                                <form class="form-inline search-bar-forum">
                                    <input type="search" placeholder="Search in Forum" aria-label="Search">
                                </form>
                            </div>
                        </div>
                        <div class="forum-btn red-rect-bg" data-toggle="modal" data-target="#discussionModal">
                            <div class="row">
                                <div class="col-lg-12">
                                    <p class="center">Start a new thread</p>
                                </div>
                            </div>
                        </div>
                        <div class="other-topics">
                            <div class="row">
                                <div class="col-lg-12">
                                    <!-- other topics -->
                                    <p class="bold">Other Topics:</p>
                                    <ul>
                                        <li>HIV Service Updates</li>
                                        <li>Referral Status</li>
                                        <li>Official Announcements</li>
                                        <li>HIV Service Updates</li>
                                        <li>Referral Status</li>
                                        <li>Official Announcements</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="discussionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header bg-red">
                            <h5 class="modal-title" id="exampleModalLabel">Start A New Thread</h5>
                            <button type="button" class="custom-close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body bg-white">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12">
                                        <form>
                                            <table class="createModal col-lg-12">
                                                <tr>
                                                    <td width=200px>
                                                        <h5>Title Of Discussion:</h5>
                                                    </td>
                                                    <td>
                                                        <h5 id="discussionTitle">Main Forum</h5>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td width=200px>
                                                        <h5>Topic:</h5>
                                                    </td>
                                                    <td>
                                                        <div class="row">
                                                            <div class="col-lg-8">
                                                                <input type="text" class="form-control">
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td width=200px style="vertical-align: top">
                                                        <h5>Post:</h5>
                                                    </td>
                                                    <td>
                                                        <textarea class="form-control" style="resize:none" rows="6"></textarea>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td></td>
                                                    <td>
                                                        <div class="row">
                                                            <div class="col-lg-4">
                                                                <button type="button" class="btn btn-primary-outline" aria-label="Left Align">
                                                                    <span class="fa fa-paperclip icon-2x" aria-hidden="true"></span>
                                                                </button>
                                                                <button type="button" class="btn btn-primary-outline" aria-label="Left Align">
                                                                    <span class="fa fa-file-picture-o icon-2x" aria-hidden="true"></span>
                                                                </button>
                                                            </div>


                                                            <div class="col-lg-4 offset-lg-4">
                                                                <a href="#" data-dismiss="modal" data-target="discussionModal">
                                                                    <div id="autoclosable-btn-success" class="post-btn red-rect-bg">
                                                                        <h5 class="center">Post</h5>
                                                                    </div>
                                                                </a>
                                                            </div>


                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td></td>

                                                </tr>
                                            </table>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <% include partials/footer %>

                <input hidden id="username" value="<%= username %>">
                <input hidden id="password" value="<%= password %>">
                <input hidden id="adminAccount" value="<%= adminAccount %>">
                <input hidden id="adminServerUrl" value="<%= adminServerUrl %>">
                <input hidden id="chatServerUrl" value="<%= chatServerUrl %>">
                <input hidden id="chatHost" value="<%= chatHost %>">

</body>

<script src="js/keycodes.js"></script>
<script src="js/admin.js"></script>
<script src="js/dashboard-chat.js"></script>
<script src="js/messagebox.js"></script>
<script src="js/navbar.js"></script>
<script src="js/announcements-thread.js"></script>

</html>